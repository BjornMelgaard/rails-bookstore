= link_to :back, class: 'general-back-link' do
  %i.fa.fa-long-arrow-left.mr-15
  Back to results

.row
  .col-sm-6
    .product-gallery
      .mb-20
        = image_tag presenter.primary_cover, class: 'img-responsive img-shadow'
      - if presenter.minor_covers?
        .images.clearfix
          - presenter.minor_cover_urls.each do |url|
            = link_to '#', class: 'img-link' do
              = image_tag url, class: 'width-full'
  .col-sm-6
    %h1.mt-res-0= presenter.title
    %p.in-grey-600.small= presenter.authors_names
    .row
      .col-xs-12.col-md-4
        %p.h1.in-gold-500.mt-10= presenter.price
      .col-xs-5.col-md-3
        .input-group.general-position
          %a.input-link{href: "#"}
            %i.fa.fa-minus.line-height-40
          %input.form-control.quantity-input{type: "text"}
          %a.input-link{href: "#"}
            %i.fa.fa-plus.line-height-40
      .col-xs-7.col-md-5
        %button.btn.btn-default.pull-right.general-position Add to Cart
    .general-info-wrap.divider-lg
      %p Description
      %p.in-grey-600.small.line-height-2{ 'data-readmore': true,
        'data-readmore-class': 'in-gold-500 ml-10',
        'data-readmore-moretext': 'Read More' }
        = presenter.description
    .general-info-wrap.divider-lg
      .clearfix
        %p.pull-left Year of publication
        %p.in-grey-600.small.pull-right= presenter.publication_year
    .general-info-wrap.divider-lg
      .clearfix
        %p.pull-left Dimensions
        %p.in-grey-600.small.pull-right= presenter.dimensions
    .general-info-wrap.divider-lg
      .clearfix
        %p.pull-left Materials
        %p.in-grey-600.small.pull-right= presenter.materials

.mb-80
  = presenter.review_widget
