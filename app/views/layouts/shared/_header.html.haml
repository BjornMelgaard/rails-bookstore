%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left.ml-15{ type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbar' }
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Bookstore', root_path, class: 'navbar-brand'
      = link_to '', class: 'shop-link pull-right visible-xs' do
        %span.shop-icon
          %span.shop-quantity 3
    = link_to '', class: 'shop-link pull-right hidden-xs' do
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{ 'aria-expanded': 'false' }
      .visible-xs
        %button.close{ type: 'button', 'aria-label': 'Close' }
          %span{ 'aria-hidden': 'true' } &times;
        %ul.nav.navbar-nav
          %li
            = link_to 'Home', root_path
          %li
            = link_to 'Shop', class: '', type: 'button', 'data-toggle': 'collapse', 'aria-expanded': 'false', 'aria-controls': 'menu'
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{ 'aria-expanded': 'false' }
              %li
                = link_to 'Mobile development', class: 'collapse-link'
              %li
                = link_to 'Photo', class: 'collapse-link'
              %li
                = link_to 'Web design', class: 'collapse-link'
          %li
            = link_to 'My account', new_user_session_path
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to 'Home', root_path
          %li.dropdown
            = link_to 'Shop', class: 'dropdown-toggle', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false'
            %ul.dropdown-menu
              %li
                = link_to 'Mobile development', class: ''
              %li
                = link_to 'Photo', class: ''
              %li
                = link_to 'Web design', class: ''
              %li.divider{ role: 'separator' }
              %li
                = link_to 'Log out', class: ''
          %li
            = link_to 'My account', new_user_session_path

